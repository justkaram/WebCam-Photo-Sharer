
<CameraScreen>:
    GridLayout:
        cols: 1
        spacing: 10
        Camera:
            id: cam
            resolution: (640, 480)
            play: False
        Button:
            id: cam_button
            size_hint: (0.1, 0.1)
            size: (3, 10)
            text: 'Start Camera'
            background_color: 'green'
            on_press: root.start() if cam.play == False else root.stop()

        Button:
            size_hint: (0.1, 0.1)
            size: (3, 10)
            text: 'Capture'
            background_color: 'green'
            on_press: root.capture()


<ImageScreen>:
    GridLayout:
        cols: 1
        spacing: 10
        Image:
            id: img_screen
        Button:
            text: 'Create sharable link'
            size: (3, 10)
        Label:
            id: link_label
            text: ''
        GridLayout:
            cols: 2
            Button:
                text: 'Copy'
                size: (3, 10)
            Button:
                text: 'open image in browser'
                size: (3, 10)

<RootWidget>:
    CameraScreen:
        id: camera_screen
        name: 'camera_screen'

    ImageScreen:
        id: image_screen
        name: 'image_screen'

